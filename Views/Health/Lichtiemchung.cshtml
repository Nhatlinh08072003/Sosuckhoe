@{
    ViewData["Title"] = "Lịch tiêm chủng";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>
    <div class="flex items-center justify-center ">
        <div class="w-full max-w-lg p-6 bg-white shadow-lg rounded-lg text-center">
            <div class="mb-6">
                <span class="text-2xl font-bold">Lịch tiêm chủng</span>
            </div>
            <div>
                <form action="/submit-History-vaccination" method="post" class="flex flex-col space-y-4">
                    <div class="form-group">
                        <label for="ten-thanh-vien" class="block text-left mb-2 font-bold">Tên Thành Viên</label>
                        <input type="text" id="ten-thanh-vien" name="Tên Thành Viên" placeholder="Nhập vào đây" required
                            class="w-full p-2 border border-gray-300 rounded">
                    </div>
                    <div class="form-group">
                        <label for="ngay-tiem" class="block text-left mb-2 font-bold">Ngày tiêm</label>
                        <input type="date" id="ngay-tiem" name="Ngày tiêm" required
                            class="w-full p-2 border border-gray-300 rounded">
                    </div>
                    <div class="form-group">
                        <label for="loai-vac-xin" class="block text-left mb-2 font-bold">Loại Vắc-xin</label>
                        <input type="text" id="loai-vac-xin" name="Loại Vắc-xin" placeholder="Nhập vào đây" required
                            class="w-full p-2 border border-gray-300 rounded">
                    </div>
                    <div class="form-group">
                        <label for="loai-tiem" class="block text-left mb-2 font-bold">Loại tiêm</label>
                        <input type="text" id="loai-tiem" name="Loại tiêm" placeholder="Nhập vào đây" required
                            class="w-full p-2 border border-gray-300 rounded">
                    </div>
                    <div class="form-group">
                        <label for="dia-diem-tiem" class="block text-left mb-2 font-bold">Địa điểm tiêm</label>
                        <input type="text" id="dia-diem-tiem" name="Địa điểm tiêm" placeholder="Nhập vào đây" required
                            class="w-full p-2 border border-gray-300 rounded">
                    </div>
                    <div class="form-group">
                        <label for="chi-phi" class="block text-left mb-2 font-bold">Chi phí</label>
                        <input type="text" id="chi-phi" name="Chi phí" placeholder="Nhập vào đây" required
                            class="w-full p-2 border border-gray-300 rounded">
                    </div>
                    <div class="form-group">
                        <label for="ghi-chu" class="block text-left mb-2 font-bold">Ghi chú</label>
                        <textarea id="ghi-chu" name="Ghi chú" placeholder="Nhập vào đây"
                            class="w-full p-2 border border-gray-300 rounded"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="mo-ta" class="block text-left mb-2 font-bold">Mô tả</label>
                        <textarea id="mo-ta" name="Mô tả" placeholder="Nhập vào đây"
                            class="w-full p-2 border border-gray-300 rounded"></textarea>
                    </div>
                    <div class="flex justify-between w-full mt-4">
                        <input type="submit" value="Ghi chú"
                            class="w-1/2 p-2 mr-2 bg-blue-500 text-white rounded cursor-pointer hover:bg-blue-600">
                        <input type="submit" value="Lưu"
                            class="w-1/2 p-2 ml-2 bg-green-500 text-white rounded cursor-pointer hover:bg-green-600">
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
