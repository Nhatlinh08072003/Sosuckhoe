@{
    ViewData["Title"] = "Thông tin khám bệnh";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>
    <div class="flex items-center justify-center bg-gray-100 min-h-screen">
        <div class="w-full max-w-screen-xl p-6 bg-white shadow-lg rounded-lg">
            <div class="mb-6 text-center">
                <span class="text-2xl font-bold">Thông tin khám bệnh</span>
            </div>
            <form action="/submit-medical-exam" method="post" enctype="multipart/form-data" class="flex flex-col space-y-4">
                <div class="form-group">
                    <label for="ten-thanh-vien" class="block text-left mb-2 font-bold">Tên Thành Viên</label>
                    <input type="text" id="ten-thanh-vien" name="Tên Thành Viên" placeholder="Nhập vào đây" required
                        class="w-full p-2 border border-gray-300 rounded">
                </div>
                <div class="form-group">
                    <label for="ngay-kham" class="block text-left mb-2 font-bold">Ngày khám bệnh</label>
                    <input type="date" id="ngay-kham" name="Ngày khám bệnh" required
                        class="w-full p-2 border border-gray-300 rounded">
                </div>
                <div class="form-group">
                    <label for="ten-benh" class="block text-left mb-2 font-bold">Tên bệnh</label>
                    <input type="text" id="ten-benh" name="Tên bệnh" placeholder="Nhập vào đây" required
                        class="w-full p-2 border border-gray-300 rounded">
                </div>
                <div class="form-group">
                    <label for="loai-benh" class="block text-left mb-2 font-bold">Loại bệnh</label>
                    <input type="text" id="loai-benh" name="Loại bệnh" placeholder="Nhập vào đây" required
                        class="w-full p-2 border border-gray-300 rounded">
                </div>
                <div class="form-group">
                    <label for="trieu-chung" class="block text-left mb-2 font-bold">Triệu chứng</label>
                    <textarea id="trieu-chung" name="Triệu chứng" placeholder="Nhập vào đây"
                        class="w-full p-2 border border-gray-300 rounded"></textarea>
                </div>
                <div class="form-group">
                    <label for="dia-diem-kham" class="block text-left mb-2 font-bold">Địa điểm khám bệnh</label>
                    <input type="text" id="dia-diem-kham" name="Địa điểm khám bệnh" placeholder="Nhập vào đây" required
                        class="w-full p-2 border border-gray-300 rounded">
                </div>
                <div class="form-group">
                    <label for="dinh-benh" class="block text-left mb-2 font-bold">Định bệnh</label>
                    <textarea id="dinh-benh" name="Định bệnh" placeholder="Nhập vào đây"
                        class="w-full p-2 border border-gray-300 rounded"></textarea>
                </div>
                <div class="form-group">
                    <label for="mo-ta-toa-thuoc" class="block text-left mb-2 font-bold">Mô tả toa thuốc</label>
                    <textarea id="mo-ta-toa-thuoc" name="Mô tả toa thuốc" placeholder="Nhập vào đây"
                        class="w-full p-2 border border-gray-300 rounded"></textarea>
                </div>
                <div class="form-group">
                    <label for="ten-bac-si" class="block text-left mb-2 font-bold">Tên Bác sĩ</label>
                    <input type="text" id="ten-bac-si" name="Tên Bác sĩ" placeholder="Nhập vào đây" required
                        class="w-full p-2 border border-gray-300 rounded">
                </div>
                <div class="form-group">
                    <label for="hinh-anh" class="block text-left mb-2 font-bold">Hình ảnh</label>
                    <input type="file" id="hinh-anh" name="Hình ảnh" accept="image/*" class="border border-gray-300 rounded">
                </div>
                <div class="flex justify-between w-full mt-4">
                    <input type="submit" value="Ghi chú"
                        class="w-1/2 p-2 mr-2 bg-blue-500 text-white rounded cursor-pointer hover:bg-blue-600">
                    <input type="submit" value="Lưu"
                        class="w-1/2 p-2 ml-2 bg-green-500 text-white rounded cursor-pointer hover:bg-green-600">
                </div>
            </form>
        </div>
    </div>
</body>
