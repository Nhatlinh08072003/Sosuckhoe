@{
    ViewData["Title"] = "Bảng nhập liệu thông báo";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
    <div class="flex items-center justify-center h-screen">
        <div class="w-full max-w-4xl p-6 bg-white shadow-lg rounded-lg">
            <div class="mb-6 text-center">
                <span class="text-2xl font-bold">Bảng nhập liệu thông báo</span>
            </div>
            <form action="/submit-message" method="post" class="flex flex-col space-y-4">
                <div class="form-group">
                    <label for="ten-thong-bao" class="block text-left mb-2 font-bold">Tên thông báo</label>
                    <input type="text" id="ten-thong-bao" name="Tên thông báo" placeholder="Nhập vào đây" required
                        class="w-full p-2 border border-gray-300 rounded">
                </div>
                <div class="form-group">
                    <label for="nguoi-nhap" class="block text-left mb-2 font-bold">Người nhập</label>
                    <input type="text" id="nguoi-nhap" name="Người nhập" placeholder="Nhập vào đây" required
                        class="w-full p-2 border border-gray-300 rounded">
                </div>
                <div class="form-group">
                    <label for="nguoi-nhan" class="block text-left mb-2 font-bold">Người nhận</label>
                    <input type="text" id="nguoi-nhan" name="Người nhận" placeholder="Nhập vào đây" required
                        class="w-full p-2 border border-gray-300 rounded">
                </div>
                <div class="form-group">
                    <label for="noi-dung" class="block text-left mb-2 font-bold">Nội dung thông báo</label>
                    <textarea id="noi-dung" name="Nội dung thông báo" rows="4" placeholder="Nhập vào đây" required
                        class="w-full p-2 border border-gray-300 rounded"></textarea>
                </div>
                <div class="flex justify-center mt-4">
                    <input type="submit" value="Lưu thông báo"
                        class="w-1/2 p-2 bg-blue-500 text-white rounded cursor-pointer hover:bg-blue-600">
                </div>
            </form>
        </div>
    </div>
</body>
